@model List<Life.Models.Entity.GuestInfo>

<div>
    @Html.ActionLink("新增", "CreateGuest", "Guest", null, new { @class = "btn btn-outline-success", style = "margin-bottom: 10px" })
</div>
<table class="table table-bordered table-dark">
    <thead>
        <tr class="info">
            <th scope="col"></th>
            <th scope="col">姓名</th>
            <th scope="col">性別</th>
            <th scope="col">手機</th>
            <th scope="col">地址</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Sex</td>
                <td>@item.Cellphone</td>
                <td>@item.Address</td>
                <td>
                    @Html.ActionLink("修改", "ReviceGuest", "Guest", new { guestId = item.Id}, new { @class = "btn btn-outline-warning" })
                    <button type="button" class="btn btn-outline-warning" onclick="DeleteGuest(@item.Id)">刪除</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    <script src="~/js/Guest/GuestList.js"></script>
}